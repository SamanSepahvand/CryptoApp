<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/item_img_precent_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_txt_1h"
            app:layout_constraintEnd_toStartOf="@+id/item_txt_1h"
            app:layout_constraintTop_toTopOf="@+id/item_txt_1h"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:background="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/item_img_logo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:maxHeight="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/point_circle_red" />

        <ImageView
            android:id="@+id/item_img_sparklines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:maxHeight="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_txt_price"
            app:layout_constraintStart_toEndOf="@+id/item_txt_title"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sds" />

        <TextView
            android:id="@+id/item_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Bitcoin"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_img_logo"
            app:layout_constraintTop_toTopOf="@+id/item_img_logo" />

        <TextView
            android:id="@+id/item_txt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="BTC"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/item_img_logo"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_title" />

        <TextView
            android:id="@+id/item_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="$12,365,24"
            android:textColor="@color/newBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/item_txt_symbol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_img_logo" />

        <TextView
            android:id="@+id/item_txt_1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="+$1,256 (0.8%)"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_img_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_txt_symbol" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>